{{#if loggedIn}}
<section class="shoe">
  <img src="/images/{{shoe.filename}}" alt="{{shoe.description}}">
  <div class="shoe-details">
    <h3>{{shoe.title}}</h3>
    <p>By: {{shoe.brand}}</p>
    <p>Exhibition open until: {{ format_date shoe.exhibition_date}}</p>
  </div>
</section>
